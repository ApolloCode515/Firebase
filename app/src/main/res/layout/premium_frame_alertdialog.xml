<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/mainsecondcolor">

    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="प्रीमियम फ्रेम"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/prem01ImageView"
        android:layout_below="@id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/border"
        android:visibility="visible"
        android:background="@drawable/premiumframe01"/>

    <ImageView
        android:id="@+id/prem02ImageView"
        android:layout_below="@id/prem01ImageView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/border"
        android:background="@drawable/premium02"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/prem03ImageView"
        android:layout_below="@id/prem02ImageView"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/border"
        android:background="@drawable/premium03"
        android:visibility="visible"/>



    <TextView
        android:id="@+id/alertMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prem03ImageView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/positiveButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/alertMessage"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="क्लिक करा"
        android:textColor="@android:color/white"
        android:background="@drawable/ic_login_bk" />

</RelativeLayout>
