<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:background="@color/mainsecondcolor"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:src="@drawable/percentage"
                android:layout_height="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:text="Apply Discount Coupon"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="16dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/couponlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnLayout"
            android:layout_gravity="center"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/couponback"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY" />


                <nl.dionsegijn.konfetti.KonfettiView
                    android:id="@+id/konfettiView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/coupontext"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/mainbrandcolor"/>


                <com.spark.swarajyabiz.ScratchCardView
                    android:id="@+id/scrachCard"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/placeorderCard"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="45dp"
                app:cardCornerRadius="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/mainbrandcolor"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place Order"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>