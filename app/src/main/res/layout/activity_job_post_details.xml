    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/ic_outline_arrow_back_24" />

            <LinearLayout
                android:id="@+id/headertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Details"
                    android:textColor="@color/TextColor"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>


    </RelativeLayout>

            <RelativeLayout
                android:id="@+id/postlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/jobtitletextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:text="Post Name"
                    android:textColor="@color/TextColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/jobcompanynametextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jobtitletextview"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="start"
                    android:text="Company Name"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:textSize="14sp"
                    tools:ignore="NotSibling" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/postlayout"
                android:background="@drawable/detail_border"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

                <RelativeLayout
                    android:id="@+id/openingslay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textview11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Openings :"
                        android:textSize="15dp"
                        android:textColor="@color/TextColor"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/openingstextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textview11"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/TextColor"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/experiencelay"
                    android:layout_below="@id/openingslay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/textview6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience :"
                        android:textSize="15dp"
                        android:textColor="@color/TextColor"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/experiencetextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textview6"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/TextColor"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/salarylay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="visible"
                    android:layout_below="@id/experiencelay">

                    <TextView
                        android:id="@+id/textview7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary :"
                        android:textSize="15dp"
                        android:textColor="@color/TextColor"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/salarytextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textview7"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="15dp"
                        android:textColor="@color/TextColor"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/workplacelay"
                    android:layout_below="@id/salarylay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Place :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/workplacetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="15dp"
                android:textColor="@color/TextColor"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/jobtypelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/workplacelay"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Type :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/jobtypetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview2"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/locationlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobtypelay"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Location :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/locationtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview4"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/skillslay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/locationlay"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textview9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skills :"
                        android:textSize="15dp"
                        android:textColor="@color/TextColor"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/skillstextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textview9"
                        android:textSize="15dp"
                        android:textColor="@color/TextColor"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/skillslay"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted On :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview5"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/descriptionlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Job Description :"
                android:textSize="20dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/descriptiontextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview3"
                android:padding="10dp"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:background="@drawable/detail_border"/>

        </RelativeLayout>

    </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/mainsecondcolor">

        <Button
            android:id="@+id/applybtn"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_login_bk"
            android:enabled="true"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="visible" />

    </RelativeLayout>
</RelativeLayout>
