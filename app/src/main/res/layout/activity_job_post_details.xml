    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Background"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:src="@drawable/ic_outline_arrow_back_24" />

            <LinearLayout
                android:id="@+id/headertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Details"
                    android:textColor="@color/TextColor"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/jobtitletextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                android:text="Shop Name"
                android:textColor="@color/TextColor"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/jobcompanynametextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/jobtitletextview"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="start"
                android:text="owner name"
                android:textColor="@color/TextColor"
                android:textSize="16sp"
                tools:ignore="NotSibling" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:id="@+id/requestbutton"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="@color/ListColor"
                app:cardElevation="10dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/ic_baseline_shop_2_2421"
                    android:drawablePadding="10dp"
                    android:text="Promote Shops"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!--                    <Button-->
                <!--                        android:id="@+id/requestbutton"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="match_parent"-->
                <!--                        android:background="@color/white"-->
                <!--                        android:text="Promote Shop"-->
                <!--                        android:textAllCaps="false"-->
                <!--                        android:textColor="@color/colorAccent"-->
                <!--                        android:textSize="14sp"-->
                <!--                        />-->

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cancel"
                android:layout_below="@id/request"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="@color/whiteCardColor"
                app:cardElevation="10dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/cancelbutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/profileverify"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="50dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/ListColor"
                app:cardElevation="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/verifytextview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:text="Profile Verification"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!--                    <Button-->
                <!--                        android:id="@+id/requestbutton"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="match_parent"-->
                <!--                        android:background="@color/white"-->
                <!--                        android:text="Promote Shop"-->
                <!--                        android:textAllCaps="false"-->
                <!--                        android:textColor="@color/colorAccent"-->
                <!--                        android:textSize="14sp"-->
                <!--                        />-->

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/premium"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="50dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/ListColor"
                app:cardElevation="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/premiumtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="10dp"
                    android:text="Premium"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!--                    <Button-->
                <!--                        android:id="@+id/requestbutton"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="match_parent"-->
                <!--                        android:background="@color/white"-->
                <!--                        android:text="Promote Shop"-->
                <!--                        android:textAllCaps="false"-->
                <!--                        android:textColor="@color/colorAccent"-->
                <!--                        android:textSize="14sp"-->
                <!--                        />-->

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Header"
        android:background="@drawable/detail_border"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <RelativeLayout
            android:id="@+id/workplacelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Place :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/workplacetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="15dp"
                android:textColor="@color/TextColor"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/jobtypelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/workplacelay"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Type :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/jobtypetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview2"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/locationlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobtypelay"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Location :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/locationtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview4"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/timelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationlay"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted On :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/timetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview5"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/descriptionlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Job Description :"
                android:textSize="20dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/descriptiontextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview3"
                android:padding="10dp"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:background="@drawable/detail_border"/>

        </RelativeLayout>

    </RelativeLayout>

            <Button
                android:id="@+id/applybtn"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_login_bk"
                android:enabled="true"
                android:text="Apply"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
