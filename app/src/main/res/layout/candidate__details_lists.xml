<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/maincardviewcolor">

        <TextView
            android:id="@+id/candidatenametextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/TextColor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Candidate name"/>

        <ImageView
            android:id="@+id/deleteimageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_cancel"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"/>


        <RelativeLayout
            android:id="@+id/emaillayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/candidatenametextview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID                :"
                android:textColor="@color/TextColor"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/candidateemailtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/text1"
                android:textColor="@color/TextColor"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contactlayout"
            android:layout_below="@id/emaillayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/candidatecontacttextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text2"
                android:layout_marginStart="5dp"
                android:textColor="@color/TextColor"
                android:textSize="15sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/qualificationlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactlayout"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualification        :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/candidatequalificationtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview1"
                android:layout_marginStart="5dp"
                android:textSize="15dp"
                android:textColor="@color/TextColor"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/jobtypelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/qualificationlayout"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream                  :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/candidatestreamtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview2"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:layout_marginStart="5dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/descriptionlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobtypelay"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills                     :"
                android:textSize="15dp"
                android:textColor="@color/TextColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/candidateskillstextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview3"
                android:layout_marginStart="5dp"
                android:textSize="15dp"
                android:textColor="@color/TextColor"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/datelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionlay"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.7"
                android:text="Applied on :"
                android:textColor="@color/TextColor"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/datetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview4"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="12dp"
                android:textColor="@color/TextColor"
                android:alpha="0.7"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/datelayout"
            android:id="@+id/buttonlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/chatbtn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColor"
                android:text="Chat"
                android:background="@drawable/border"
                android:textAllCaps="@bool/car_ui_toolbar_tabs_on_second_row"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>