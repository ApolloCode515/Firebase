<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".BusinessFrame.Fragment8">

<FrameLayout
    android:id="@+id/frameLayout"
    android:layout_below="@id/header"
    android:layout_width="match_parent"
    android:layout_height="437dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/frame18">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <ImageView
            android:id="@+id/shopimageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="46dp"
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/shopnametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="27dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Shop Name"
            android:textColor="#FF0E0E"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shopcontactNumbertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/callImg"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="48dp"
            android:layout_marginEnd="35dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:clickable="true"
            android:text="contact Number"
            android:textSize="12dp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/callImg"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="48dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_call_24"
            android:background="@drawable/circle_white_fill" />


        <TextView
            android:id="@+id/shopownernametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:clickable="true"
            android:ellipsize="none"
            android:layout_toRightOf="@id/locationimageview"
            android:maxLines="1"
            android:text="address"
            android:textSize="12dp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/locationimageview"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/circle_white_fill"
            android:gravity="center"
            android:padding="3dp"
            android:src="@drawable/ic_outline_location_black_24" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="bottom"
            android:textColor="@color/TextColor"
            android:textSize="20dp"
            android:clickable="true"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center_vertical"
            android:textColor="@color/TextColor"
            android:textSize="20dp"
            android:clickable="true"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/edittextlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:visibility="gone">

            <ImageView
                android:id="@+id/cancelimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_clear_24"/>

            <EditText
                android:id="@+id/texteditor"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:drawablePadding="8dp"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/checkimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_check_24"/>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>


</FrameLayout>