<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app1:cardElevation="5dp"
    app:ignore="NamespaceTypo"
    android:id="@+id/postcardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/maincardviewcolor"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@color/teal_700" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bizname"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="S.M.Computers"
                    android:textColor="@color/mainbrandcolor"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/verifyimg"
                    android:layout_toRightOf="@id/bizname"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_baseline_verified_24"
                    android:layout_gravity="top"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/bizadd"
                    android:layout_below="@id/bizname"
                    android:layout_width="wrap_content"
                    android:text="Sambhaji Chowk, Jath"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/postde"
                android:layout_width="wrap_content"
                android:text="@string/ssd"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:maxLines="4"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/postImg"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:background="@drawable/bklogo1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainbrandcolor">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            android:paddingTop="08dp"
            android:paddingBottom="8dp"
            android:paddingStart="5dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/text2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/click"
                android:alpha="0.8"/>

            <TextView
                android:id="@+id/clickcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text2"
                android:textColor="@color/black"
                android:alpha="0.8"/>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lay1"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/text1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/baseline_remove_red_eye_24"
                android:layout_centerVertical="true"
                android:alpha="0.8"/>

            <TextView
                android:id="@+id/viewcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_toRightOf="@+id/text1"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:alpha="0.8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Views"
                android:layout_toRightOf="@+id/viewcount"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:alpha="0.8"/>

        </RelativeLayout>

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/proTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:background="#FF9800"
                android:paddingStart="7dp"
                android:paddingTop="5dp"
                android:paddingEnd="7dp"
                android:paddingBottom="5dp"
                android:text="BestSeller"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:reflectionColor="#9C27B0" />

        </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>