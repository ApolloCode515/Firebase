<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app1:cardElevation="5dp"
    app:ignore="NamespaceTypo"
    android:id="@+id/postcardview"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainbrandcolor">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:src="@color/teal_700" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bizname"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="S.M.Computers"
                    android:textColor="@color/mainbrandcolor"
                    android:textStyle="bold" />



                <TextView
                    android:id="@+id/bizadd"
                    android:layout_below="@id/bizname"
                    android:layout_width="wrap_content"
                    android:text="Sambhaji Chowk, Jath"
                    android:textSize="11sp"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/verifyLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bizadd">

                    <ImageView
                        android:id="@+id/verifyimg"
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/verifyed"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:visibility="visible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business"
                        android:textSize="10sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#4FB553"
                        android:textStyle="bold"/>

                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/postde"
                android:layout_width="wrap_content"
                android:text="@string/ssd"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:maxLines="4"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/postImg"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:background="@drawable/bklogo1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainbrandcolor">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:layout_marginBottom="0.5dp"
            android:paddingTop="08dp"
            android:paddingBottom="8dp"
            android:paddingStart="5dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/lay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/text2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/click"
                android:alpha="0.8"/>

            <TextView
                android:id="@+id/clickcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text2" />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lay1"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/text1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/baseline_remove_red_eye_24"
                android:layout_centerVertical="true"
                android:alpha="0.8"/>

            <TextView
                android:id="@+id/viewcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_toRightOf="@+id/text1"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Views"
                android:layout_toRightOf="@+id/viewcount"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:alpha="0.8"
                android:visibility="gone"/>

        </RelativeLayout>

            <com.romainpiel.shimmer.ShimmerTextView
                android:id="@+id/proTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:background="#FF9800"
                android:paddingStart="7dp"
                android:paddingTop="5dp"
                android:paddingEnd="7dp"
                android:paddingBottom="5dp"
                android:text="BestSeller"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:reflectionColor="#9C27B0" />

        </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/mainbrandcolor">

                <LinearLayout
                    android:id="@+id/profileLay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_open_in_new_241"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="0dp"
                    android:alpha="0.7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Profile"
                    android:textColor="#0053EE"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/mainbrandcolor">

                <LinearLayout
                    android:id="@+id/callLay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_marginStart="0.5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/baseline_home_call_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="0dp"
                    android:alpha="0.7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Now"
                    android:textColor="#0053EE"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:alpha="0.7"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>