<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:id="@+id/relativelayouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/businessimagecard"
            android:layout_width="180dp"
            android:layout_height="198dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">


            <ImageView
                android:id="@+id/businessimages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <androidx.cardview.widget.CardView
                    android:id="@+id/currentdatecard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/ListColor"
                    android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/currentdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:textSize="8dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/ListColor"
                    android:visibility="gone"/>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border1"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/businesstextviews"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/businessimagecard"
            android:text="Accounting Service"
            android:textSize="13dp"
            android:textColor="@color/TextColor"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp" />
    </RelativeLayout>

</RelativeLayout>