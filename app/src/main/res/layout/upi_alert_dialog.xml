<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="210dp"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#C9B8EC"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:id="@+id/sharecodelayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/titletext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:text="SET UPI"
                            android:textColor="@color/mainbrandcolor"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/UPIcard"
                            android:layout_below="@id/titletext"
                            android:layout_width="230dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp">

                            <EditText
                                android:id="@+id/UPIedittext"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:hint="Enter UPI"
                                android:textSize="15dp"
                                android:textColor="@color/TextColor"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:background="#14771591"/>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/UPIcard"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp">

                            <Button
                                android:id="@+id/editbtn"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:layout_marginEnd="10dp"
                                android:text="Edit"
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:textAllCaps="false"
                                android:visibility="gone"/>

                            <Button
                                android:id="@+id/savebtn"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@color/mainbrandcolor"
                                android:layout_marginStart="0dp"
                                android:text="Save"
                                android:textSize="15dp"
                                android:textColor="@color/white"
                                android:textAllCaps="false"/>

                        </LinearLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>

</FrameLayout>
