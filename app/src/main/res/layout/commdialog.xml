<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/mainsecondcolor"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@color/mainsecondcolor"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/ic_baseline_add_box_24"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:text="New Community"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/mainbrandcolor"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/closeCom"
                android:layout_width="wrap_content"
                android:text="Close"
                android:textColor="#E40101"
                android:padding="2dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                android:layout_height="90dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/commImg"
                        android:layout_width="match_parent"
                        android:background="@drawable/addimg"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <EditText
                android:id="@+id/commName"
                android:layout_width="match_parent"
                android:background="@drawable/back_select"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:hint="Community Name (नवीन कम्युनिटीचे नाव टाका)"
                android:layout_marginBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="14sp"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/commDesc"
                android:layout_width="match_parent"
                android:background="@drawable/back_select"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:padding="10dp"
                android:gravity="start|top"
                android:hint="Community Description (कम्युनिटीबद्दल माहिती)"
                android:layout_height="100dp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/addComm"
            android:layout_width="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layout_marginBottom="20dp"
            android:layout_height="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/mainbrandcolor"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/ic_baseline_arrow_circle_right_241"
                    android:layout_height="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Create"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>