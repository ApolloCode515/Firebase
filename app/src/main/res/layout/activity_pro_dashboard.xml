<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProDashboard">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/mainsecondcolor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:alpha="0.5"
                android:layout_marginStart="-50dp"
                android:layout_marginTop="-50dp"
                android:src="@drawable/bklogotrs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/unamev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Imrankhan Malidwale"
                android:textSize="19sp"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Platinum"
                android:textSize="15sp"
                android:textStyle="normal"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/headers"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/translogxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal"
                android:textStyle="normal"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:text="Wallet Balance"/>

            <TextView
                android:id="@+id/egbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="21sp"
                android:layout_marginTop="10dp"
                android:text="â‚¹ 0.0"
                android:drawablePadding="10dp"
                app:drawableEndCompat="@drawable/ic_baseline_refresh_24dd" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="13dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/recharge11"
                    android:layout_width="65dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:foreground="?android:selectableItemBackground"
                    android:layout_height="65dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/ic_baseline_battery_charging_full_24"
                        android:layout_height="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Recharge"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="40dp"
                        android:src="@drawable/ic_baseline_commit_2422"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:background="@color/mainbrandcolor"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/activate11"
                    android:layout_width="65dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:foreground="?android:selectableItemBackground"
                    android:layout_height="65dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/wihdraw"
                        android:layout_height="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="WithDraw"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="40dp"
                        android:src="@drawable/ic_baseline_commit_24"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:background="@color/mainbrandcolor"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/history11"
                    android:layout_width="65dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:foreground="?android:selectableItemBackground"
                    android:layout_height="65dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/insight"
                        android:layout_height="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Insights"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="40dp"
                        android:src="@drawable/ic_baseline_commit_24"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headers"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/rclay"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Recharge Wallet (add money to wallet)"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="100dp">

                    <LinearLayout
                        android:id="@+id/ff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/rupee" />

                        <EditText
                            android:id="@+id/tpamt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:hint="0"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="34sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/clear"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:src="@drawable/ic_baseline_close_24cc" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/amt100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/nvnv"
                            android:foreground="?android:selectableItemBackground"
                            android:padding="8dp"
                            android:text=" + 100 "
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/amt300"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/nvnv"
                            android:foreground="?android:selectableItemBackground"
                            android:padding="8dp"
                            android:text=" + 300 "
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/amt500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/nvnv"
                            android:foreground="?android:selectableItemBackground"
                            android:padding="8dp"
                            android:text=" + 500 "
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true">

                    <Button
                        android:id="@+id/addmoney"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button"
                        android:foreground="?android:selectableItemBackground"
                        android:text="Add Money"
                        android:textColor="@color/white" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/actlay"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Activation Menu"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/histlay"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>